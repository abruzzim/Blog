<html>
<head>
  <title>BWAIN Show Posts</title>
</head>
<body>
<p>%DEBUG-I-SHOWPOSTS_ERB, In views/showposts.erb</p><br />
<table border="1">
  <!-- Table Header -->
  <tr>
    <th>Post_ID</th>
    <th>Title</th>
    <th>Body</th>
    <th>User_ID</th>
    <th>Created</th>
    <th>Updated</th>
  </tr>
  <!-- Table Body -->
  <% @postlist.each do |element| %>
   <tr>
      <td><%= element.id %></td>
      <td><%= element.title %></td>
      <td><%= element.body %></td>
      <td><%= element.user_id %></td>
      <td><%= element.created_at %></td>
      <td><%= element.updated_at %></td>
   </tr>
  <% end %>
</table>
</body>
</html>